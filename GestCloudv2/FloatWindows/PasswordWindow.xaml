<Window x:Class="GestCloudv2.FloatWindows.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestCloudv2.FloatWindows"
        mc:Ignorable="d"
        Title="PasswordWindow" Height="400" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
       
        <Label Name="LB_Password" FontSize="20" Grid.Column="1" Grid.Row="1" HorizontalContentAlignment="Center" VerticalAlignment="Center">Contraseña</Label>
        <PasswordBox Name="TB_Password" FontSize="20" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center"></PasswordBox>

        <Button Name="BT_Enter" FontSize="14" Grid.Column="1" Grid.Row="3" Margin="10" IsEnabled="False" VerticalAlignment="Center" Click="EV_PasswordEnter">Entrar</Button>
    </Grid>
</Window>
