<Page x:Class="GestCloudv2.UserItem.InfoUser_ToolSide"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GestCloudv2.UserItem"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="InfoUser_ToolSide">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Grid.Row="0" Margin="10" Click="AccessInfoUserEvent">Accesos</Button>
        <Button Name="EditButton" Grid.Column="1" Grid.Row="4" Margin="10" Click="EditInfoUserEvent">Editar Usuario</Button>
        <Button Name="SaveButton" Grid.Column="1" Grid.Row="4" Margin="10" Visibility="Hidden">Guardar Cambios</Button>
    </Grid>
</Page>
