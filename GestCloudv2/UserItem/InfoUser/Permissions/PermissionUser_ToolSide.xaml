<Page x:Class="GestCloudv2.UserItem.InfoUser.PermissionUser_ToolSide"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GestCloudv2.UserItem.InfoUser"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PermissionUser_ToolSide">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Name="BasicPermissionButton" Grid.Column="1" Grid.Row="0" Margin="10" Click="BasicPermissionEvent">Permisos Generales</Button>
        <Button Name="UsersPermissionButton" Grid.Column="1" Grid.Row="1" Margin="10" Click="UsersPermissionEvent">Permisos Usuarios</Button>
        <Button Name="CardsPermissionButton" Grid.Column="1" Grid.Row="2" Margin="10" Click="CardsPermissionEvent">Permisos Cartas</Button>
    </Grid>
</Page>
