<Page x:Class="GestCloudv2.UserItem.InfoUser.AccessUser_ToolSide"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GestCloudv2.UserItem.InfoUser"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AccessUser_ToolSide">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Name="BT_ResetPassword" Grid.Column="1" Grid.Row="0" Margin="10" Click="EV_ResetPassword">Restablecer contraseña</Button>
        <Button Name="BT_DisableUser" Grid.Column="1" Grid.Row="1" Margin="10" Visibility="Hidden" Click="EV_DisableUser">Desactivar usuario</Button>
        <Button Name="BT_EnableUser" Grid.Column="1" Grid.Row="1" Margin="10" Visibility="Hidden" Click="EV_EnableUser">Activar usuario</Button>
        <!--<Button Name="SaveButton" Grid.Column="1" Grid.Row="4" Margin="10" Visibility="Hidden">Guardar Cambios</Button>-->
    </Grid>
</Page>
