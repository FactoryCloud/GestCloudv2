<Page x:Class="GestCloudv2.StockItem.AddStock.MainAddStock.AddStock_ToolSide"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GestCloudv2.StockItem.AddStock.MainAddStock"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AddStock_ToolSide">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Grid.Row="0" Margin="10" Click="Event_NewLine">Añadir línea</Button>
        <Button IsEnabled="False" Grid.Column="1" Grid.Row="1" Margin="10">Editar línea</Button>
        <Button IsEnabled="False" Grid.Column="1" Grid.Row="2" Margin="10">Eliminar línea</Button>
        <Button IsEnabled="False" Grid.Column="1" Grid.Row="4" Margin="10">Guardar Ajuste de Stock</Button>
    </Grid>
</Page>
