<Page x:Class="GestCloudv2.Documents.DCM_Transfers.View.TS_DCM_Transfers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GestCloudv2.Documents.DCM_Transfers.View"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="TS_DCM_Transfers">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button Name="BT_New" Grid.Column="0" Grid.Row="0" Margin="10" Click="EV_DocumentAdd">
            <TextBlock TextAlignment="Center">Añadir<LineBreak/><Label Name="LB_New">Albarán</Label></TextBlock>
        </Button>
        <Button Grid.Column="1" Grid.Row="4" IsEnabled="false" Margin="10" Name="BT_Load">
            <TextBlock TextAlignment="Center">Generar <LineBreak/><Label Name="LB_Load">Traspaso</Label></TextBlock>
        </Button>
    </Grid>
</Page>
