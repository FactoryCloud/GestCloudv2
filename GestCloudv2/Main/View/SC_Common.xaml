<Page x:Class="GestCloudv2.Main.View.SC_Common"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GestCloudv2.Main.View"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="SC_Main">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Button VerticalAlignment="Center" HorizontalAlignment="Center">Minimizar Documento</Button>
        <GroupBox Grid.Row="1" Header="Documentos">
            <Grid></Grid>
        </GroupBox>
        <Separator Grid.Row="2"/>
        <GroupBox Grid.Row="3" Header="Fichas">
            <Grid></Grid>
        </GroupBox>
    </Grid>
</Page>
