<Window x:Class="GestCloudv2.ChangePasswordUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestCloudv2"
        mc:Ignorable="d"
        Title="ChangePasswordUserWindow" Height="500" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock Name="NewPasswordLabel" FontSize="14" Grid.Column="1" Grid.Row="1" TextAlignment="Center" VerticalAlignment="Center">Elija una nueva contraseña</TextBlock>
        <PasswordBox Name="NewPasswordText" FontSize="20" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center"></PasswordBox>

        <Button Name="SaveNewPasswordButton" FontSize="14" Grid.Column="1" Grid.Row="4" Margin="20" IsEnabled="false" Click="PasswordChange_Event">Aceptar</Button>
    </Grid>
</Window>
